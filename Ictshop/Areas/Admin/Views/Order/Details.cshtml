@model Ictshop.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Order_Status.StatusName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Order_Status.StatusName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.FullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
    </dl>
</div>
<div>
    <h3>Danh sách sản phẩm đã đặt</h3>    
    <table>
        <tr>
            <th>Order ID  </th>
            <th>Product Name  </th>
            <th>Quantity  </th>
            <th>Total Cost  </th>
        </tr>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.OrderID</td>
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.TotalCost</td>
            </tr>
        }
        </table>
    
</div>
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.OrderID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
