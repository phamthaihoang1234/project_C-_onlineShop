@model IEnumerable<Ictshop.Models.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Brand Management</h2>

<p>
    @Html.ActionLink("Create New Brand", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Brand ID
        </th>
        <th> 
            Brand Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BrandID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BrandName)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.BrandID }) |
        @Html.ActionLink("Details", "Details", new { id = item.BrandID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.BrandID })
    </td>
</tr>
}

</table>
