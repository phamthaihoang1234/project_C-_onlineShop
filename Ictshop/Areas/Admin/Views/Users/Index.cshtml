@model PagedList.IPagedList<Ictshop.Models.User>

@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý người dùng</h2>


<p>
    <button class="btn-default"> @Html.ActionLink("Thêm mới", "Create") </button>
</p>
<table class="table table-bordered">
    <tr>
        <th>
            FullName
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th>
            Password
        </th>
        <th>
            Address
        </th>
        <th>
            RoleName
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleName)
            </td>
            <td>
                @*@Html.ActionLink("Sửa", "Edit", new { id = item.UserID }) |*@
                @Html.ActionLink("Chi tiết", "Details", new { id = item.UserID }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.UserID })
            </td>
        </tr>
    }

</table>
<!-- Thêm mã phân trang -->
<br />

    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

    <!-- Kết thúc -->
