@model IEnumerable<Ictshop.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách đơn hàng</h2>


<table class="table">
    <tr>
        <th>
           Họ tên
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Tình trạng đơn hàng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            <div style="color:red">@item.Order_Status.StatusName</div>
        </td>
        <td>
            <button class="btn-primary">
                @Html.ActionLink("Chi tiết", "Details", new { id = item.OrderID }, new { @style = "color:white;" })
            </button>

        </td>
    </tr>
}

</table>
