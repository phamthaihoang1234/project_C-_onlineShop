@model Ictshop.Models.LoginModel

@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hãy đăng nhập để sử dụng đầy đủ tính năng của Website</h2>

@using (Html.BeginForm("ForgotPass", "User", FormMethod.Post))
{
    <div class="form-horizontal">
        <hr />
        <h2 style="padding-left: 190px;">CONFIRM YOUR EMAIL</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.userMail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="email" class="form-control" />
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reset password" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@ViewBag.Fail


