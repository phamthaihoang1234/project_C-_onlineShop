
@model IEnumerable<Ictshop.Models.Product>
@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListProduct</h2>
<div class="row">
    <div class="col-md-3 bg-danger">
        <a>Navbar</a>
    </div>
    <div class="col-md-9 bg-white">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6">
                <a href="@Url.Action("xemchitiet", new {@ProductID=item.ProductID })">
                    <img src=@Url.Content("~/HinhanhSP/"+item.Image) class="img-responsive" alt="" width="400" height="400" />
                </a>
                <center>
                    <h3>@item.ProductName</h3>
                    <h3 style="color:red">Giá: @item.Price</h3>
                    <br />
                    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.ProductID, @strURL = Request.Url.ToString() }))
                    {
                        <input type="submit" value="Mua hàng" id="bgnGioHang" />

                    }
                    <a href="@Url.Action("xemchitiet", new {@ProductID=item.ProductID })">Xem chi tiết</a>
                </center>
            </div>

        }

    </div>

</div>

